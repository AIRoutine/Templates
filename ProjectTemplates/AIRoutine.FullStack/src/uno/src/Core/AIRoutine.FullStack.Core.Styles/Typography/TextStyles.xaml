<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Display -->
    <Style x:Key="DisplayTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="32" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{ThemeResource OnBackgroundBrush}" />
    </Style>

    <!-- Headlines -->
    <Style x:Key="HeadlineLargeTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{ThemeResource OnBackgroundBrush}" />
    </Style>

    <Style x:Key="HeadlineMediumTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{ThemeResource OnBackgroundBrush}" />
    </Style>

    <Style x:Key="HeadlineSmallTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{ThemeResource OnBackgroundBrush}" />
    </Style>

    <!-- Titles -->
    <Style x:Key="TitleLargeTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceBrush}" />
    </Style>

    <Style x:Key="TitleMediumTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceBrush}" />
    </Style>

    <!-- Body -->
    <Style x:Key="BodyLargeTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceBrush}" />
    </Style>

    <Style x:Key="BodyMediumTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceBrush}" />
    </Style>

    <Style x:Key="BodySmallTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceBrush}" />
    </Style>

    <!-- Labels -->
    <Style x:Key="LabelTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceVariantBrush}" />
    </Style>

    <!-- Caption -->
    <Style x:Key="CaptionTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceVariantBrush}" />
    </Style>

    <!-- Centered Headlines -->
    <Style x:Key="HeadlineLargeCenteredTextStyle" TargetType="TextBlock" BasedOn="{StaticResource HeadlineLargeTextStyle}">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="TextAlignment" Value="Center" />
    </Style>

    <!-- Centered Body -->
    <Style x:Key="BodyMediumCenteredTextStyle" TargetType="TextBlock" BasedOn="{StaticResource BodyMediumTextStyle}">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="TextAlignment" Value="Center" />
    </Style>

    <!-- Centered Body Subtle -->
    <Style x:Key="BodyMediumCenteredSubtleTextStyle" TargetType="TextBlock" BasedOn="{StaticResource BodyMediumCenteredTextStyle}">
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceVariantBrush}" />
    </Style>

    <!-- Centered Title -->
    <Style x:Key="TitleLargeCenteredTextStyle" TargetType="TextBlock" BasedOn="{StaticResource TitleLargeTextStyle}">
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

</ResourceDictionary>
