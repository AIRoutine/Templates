<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Default TextBox -->
    <Style x:Key="DefaultTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{ThemeResource InputBackgroundBrush}" />
        <Setter Property="Foreground" Value="{ThemeResource InputForegroundBrush}" />
        <Setter Property="BorderBrush" Value="{ThemeResource InputBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="12,10" />
        <Setter Property="MinHeight" Value="40" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="PlaceholderForeground" Value="{ThemeResource InputPlaceholderBrush}" />
    </Style>

    <!-- Default PasswordBox -->
    <Style x:Key="DefaultPasswordBoxStyle" TargetType="PasswordBox">
        <Setter Property="Background" Value="{ThemeResource InputBackgroundBrush}" />
        <Setter Property="Foreground" Value="{ThemeResource InputForegroundBrush}" />
        <Setter Property="BorderBrush" Value="{ThemeResource InputBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="12,10" />
        <Setter Property="MinHeight" Value="40" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="PlaceholderForeground" Value="{ThemeResource InputPlaceholderBrush}" />
    </Style>

    <!-- Default ComboBox -->
    <Style x:Key="DefaultComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Background" Value="{ThemeResource InputBackgroundBrush}" />
        <Setter Property="Foreground" Value="{ThemeResource InputForegroundBrush}" />
        <Setter Property="BorderBrush" Value="{ThemeResource InputBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="12,10" />
        <Setter Property="MinHeight" Value="40" />
        <Setter Property="CornerRadius" Value="6" />
    </Style>

    <!-- Default CheckBox -->
    <Style x:Key="DefaultCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceBrush}" />
        <Setter Property="MinHeight" Value="32" />
    </Style>

    <!-- Default ToggleSwitch -->
    <Style x:Key="DefaultToggleSwitchStyle" TargetType="ToggleSwitch">
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceBrush}" />
        <Setter Property="MinHeight" Value="40" />
    </Style>

</ResourceDictionary>
