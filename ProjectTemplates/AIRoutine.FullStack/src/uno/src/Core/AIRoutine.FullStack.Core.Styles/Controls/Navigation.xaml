<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Default NavigationView -->
    <Style x:Key="DefaultNavigationViewStyle" TargetType="NavigationView">
        <Setter Property="Background" Value="{ThemeResource SurfaceBrush}" />
        <Setter Property="PaneToggleButtonStyle" Value="{StaticResource IconButtonStyle}" />
    </Style>

    <!-- NavigationViewItem -->
    <Style x:Key="DefaultNavigationViewItemStyle" TargetType="NavigationViewItem">
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceBrush}" />
        <Setter Property="FontWeight" Value="Normal" />
    </Style>

</ResourceDictionary>
