<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utu="using:Uno.Toolkit.UI">

    <!-- Card -->
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource SurfaceBrush}" />
        <Setter Property="BorderBrush" Value="{ThemeResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
    </Style>

    <!-- Card Subtle (no border) -->
    <Style x:Key="CardSubtleStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource SurfaceBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
    </Style>

    <!-- Divider -->
    <Style x:Key="DividerStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource BorderBrush}" />
        <Setter Property="Height" Value="1" />
    </Style>

    <!-- Content StackPanel -->
    <Style x:Key="ContentStackStyle" TargetType="StackPanel">
        <Setter Property="Spacing" Value="16" />
    </Style>

    <!-- Compact StackPanel -->
    <Style x:Key="CompactStackStyle" TargetType="StackPanel">
        <Setter Property="Spacing" Value="8" />
    </Style>

    <!-- Centered Content AutoLayout -->
    <Style x:Key="CenteredContentAutoLayoutStyle" TargetType="utu:AutoLayout">
        <Setter Property="Orientation" Value="Vertical" />
        <Setter Property="PrimaryAxisAlignment" Value="Center" />
        <Setter Property="CounterAxisAlignment" Value="Center" />
    </Style>

</ResourceDictionary>
