<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light Theme Colors -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FAFAFA" />
    <SolidColorBrush x:Key="SurfaceVariantBrush" Color="#F5F5F5" />

    <SolidColorBrush x:Key="OnBackgroundBrush" Color="#000000" />
    <SolidColorBrush x:Key="OnSurfaceBrush" Color="#171717" />
    <SolidColorBrush x:Key="OnSurfaceVariantBrush" Color="#525252" />

    <SolidColorBrush x:Key="BorderBrush" Color="#E5E5E5" />
    <SolidColorBrush x:Key="BorderSubtleBrush" Color="#F5F5F5" />

    <SolidColorBrush x:Key="AccentBrush" Color="#0066FF" />
    <SolidColorBrush x:Key="DangerBrush" Color="#DC2626" />

    <!-- Button Colors -->
    <SolidColorBrush x:Key="PrimaryButtonBackgroundBrush" Color="#000000" />
    <SolidColorBrush x:Key="PrimaryButtonForegroundBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="PrimaryButtonHoverBrush" Color="#171717" />

    <SolidColorBrush x:Key="SecondaryButtonBackgroundBrush" Color="Transparent" />
    <SolidColorBrush x:Key="SecondaryButtonForegroundBrush" Color="#000000" />
    <SolidColorBrush x:Key="SecondaryButtonBorderBrush" Color="#E5E5E5" />

    <!-- Input Colors -->
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FAFAFA" />
    <SolidColorBrush x:Key="InputForegroundBrush" Color="#000000" />
    <SolidColorBrush x:Key="InputBorderBrush" Color="#E5E5E5" />
    <SolidColorBrush x:Key="InputPlaceholderBrush" Color="#737373" />

</ResourceDictionary>
