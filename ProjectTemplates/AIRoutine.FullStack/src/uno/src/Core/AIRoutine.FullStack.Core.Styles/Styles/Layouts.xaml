<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Page Layout Styles -->
    <Style x:Key="PageContentStyle" TargetType="Grid">
        <Setter Property="Padding" Value="16" />
        <Setter Property="Background" Value="{ThemeResource ApplicationPageBackgroundThemeBrush}" />
    </Style>

    <Style x:Key="ContentStackPanelStyle" TargetType="StackPanel">
        <Setter Property="Spacing" Value="12" />
        <Setter Property="Padding" Value="16" />
    </Style>

    <!-- Card Styles -->
    <Style x:Key="CardBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
    </Style>

    <!-- Spacing -->
    <x:Double x:Key="SmallSpacing">8</x:Double>
    <x:Double x:Key="MediumSpacing">16</x:Double>
    <x:Double x:Key="LargeSpacing">24</x:Double>
    <x:Double x:Key="ExtraLargeSpacing">32</x:Double>

    <!-- Corner Radius -->
    <CornerRadius x:Key="SmallCornerRadius">4</CornerRadius>
    <CornerRadius x:Key="MediumCornerRadius">8</CornerRadius>
    <CornerRadius x:Key="LargeCornerRadius">12</CornerRadius>

</ResourceDictionary>
