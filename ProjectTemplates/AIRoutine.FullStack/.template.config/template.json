{
  "$schema": "http://json.schemastore.org/template",
  "author": "AIRoutine",
  "classifications": ["Web", "API", "Uno", "FullStack", "Mobile", "Desktop"],
  "identity": "AIRoutine.FullStack.CSharp",
  "name": "AIRoutine Full-Stack (API + Uno App)",
  "shortName": "airoutine-fullstack",
  "sourceName": "AIRoutine.FullStack",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "preferNameDirectory": true,
  "sources": [
    {
      "exclude": [
        "subm/**/.git"
      ]
    }
  ],
  "primaryOutputs": [
    {
      "path": "AIRoutine.FullStack.slnx"
    }
  ],
  "postActions": [
    {
      "id": "git-setup",
      "actionId": "AC1156F7-BB77-4DB8-B28F-24EEBCCA1E5C",
      "description": "Git Repository Setup",
      "manualInstructions": [
        {
          "text": "Run the following commands to initialize git with submodules:\n  git init\n  git submodule init\n  git submodule update"
        }
      ]
    },
    {
      "id": "claude-setup",
      "actionId": "AC1156F7-BB77-4DB8-B28F-24EEBCCA1E5C",
      "description": "Claude Code Setup",
      "manualInstructions": [
        {
          "text": "To setup Claude Code plugins, start 'claude' in this directory. The SessionStart hook will automatically install the uno-dev plugin with MCP servers."
        }
      ]
    }
  ]
}
