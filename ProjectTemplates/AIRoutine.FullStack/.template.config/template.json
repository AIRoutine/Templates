{
  "$schema": "http://json.schemastore.org/template",
  "author": "AIRoutine",
  "classifications": ["Web", "API", "Uno", "FullStack", "Mobile", "Desktop"],
  "identity": "AIRoutine.FullStack.CSharp",
  "name": "AIRoutine Full-Stack (API + Uno App)",
  "shortName": "airoutine-fullstack",
  "sourceName": "AIRoutine.FullStack",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "preferNameDirectory": true,
  "primaryOutputs": [
    {
      "path": "AIRoutine.FullStack.slnx"
    }
  ],
  "postActions": [
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "description": "Initialize git repository",
      "manualInstructions": [
        {
          "text": "Run: git init"
        }
      ],
      "continueOnError": true,
      "args": {
        "executable": "git",
        "args": "init"
      }
    },
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "description": "Add UnoFramework git submodule",
      "manualInstructions": [
        {
          "text": "Run: git submodule add https://github.com/AIRoutine/UnoFramework.git subm/uno"
        }
      ],
      "continueOnError": true,
      "args": {
        "executable": "git",
        "args": "submodule add https://github.com/AIRoutine/UnoFramework.git subm/uno"
      }
    },
    {
      "actionId": "AC1156F7-BB77-4DB8-B28F-24EEBCCA1E5C",
      "description": "Claude Code Setup Instructions",
      "manualInstructions": [
        {
          "text": "To setup Claude Code plugins, start 'claude' in this directory and restart once. The SessionStart hook will automatically install the uno-dev plugin with MCP servers."
        }
      ]
    }
  ]
}
