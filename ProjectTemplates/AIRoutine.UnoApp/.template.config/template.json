{
  "$schema": "http://json.schemastore.org/template",
  "author": "AIRoutine",
  "classifications": ["Uno", "MAUI", "Mobile", "Desktop", "WASM"],
  "identity": "AIRoutine.UnoApp.CSharp",
  "name": "AIRoutine Uno Platform App",
  "shortName": "airoutine-uno",
  "sourceName": "AIRoutine.UnoApp",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "preferNameDirectory": true,
  "primaryOutputs": [
    {
      "path": "AIRoutine.UnoApp.slnx"
    }
  ],
  "postActions": [
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "description": "Initialize git repository",
      "manualInstructions": [
        {
          "text": "Run: git init"
        }
      ],
      "continueOnError": true,
      "args": {
        "executable": "git",
        "args": "init"
      }
    },
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "description": "Add UnoFramework git submodule",
      "manualInstructions": [
        {
          "text": "Run: git submodule add https://github.com/AIRoutine/UnoFramework.git framework"
        }
      ],
      "continueOnError": true,
      "args": {
        "executable": "git",
        "args": "submodule add https://github.com/AIRoutine/UnoFramework.git framework"
      }
    },
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "description": "Add AIRoutine Claude Plugins marketplace",
      "manualInstructions": [
        {
          "text": "Run: claude /plugin marketplace add AIRoutine/at-claude-plugins"
        }
      ],
      "continueOnError": true,
      "args": {
        "executable": "claude",
        "args": "/plugin marketplace add AIRoutine/at-claude-plugins"
      }
    },
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "description": "Install uno-dev Claude plugin",
      "manualInstructions": [
        {
          "text": "Run: claude /plugin install uno-dev"
        }
      ],
      "continueOnError": true,
      "args": {
        "executable": "claude",
        "args": "/plugin install uno-dev"
      }
    }
  ]
}
